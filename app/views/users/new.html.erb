<!-- Adding the form here -->

<div class="row">
  <div class ="small-6 small-centered columns padding_bottom_40">
    <%= form_for([@club, @user]) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Write your name here" %>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Write your email here" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

