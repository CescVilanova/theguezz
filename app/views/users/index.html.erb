<h4 class="subheader">Guezz - Knockout Phase Champions League 2013-2014</h4>

<p class="subheader">
  <a href="#" data-reveal-id="GameRulesModal">Game Rules</a>
  |
  <a href="#">Admin Login</a>
</p>

<hr>

<ul class="subheader large-block-grid-7">
  <% @actual_result.each do |match| %>
    <li>
      <a href="#"><%= match.name %></a> 
    </li>
  <% end %>
</ul>

<h4 class="subheader">1st Leg 1/8th Ranking</h4>

<table class="large-block-grid-3">
  <thead>
    <tr class="row.full_width">
      <th width="950">Player</th>
      <th width="100">Score</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |user|%>
      <tr class="row.full_width">
        <td>
          <%= user.name %>  
          <p>
            <%= link_to "New Prediction", new_user_prediction_path(user) %>
            | <%= link_to "Actual Result", new_user_actual_result_path(user) %>
            | <%= link_to "Edit User", edit_user_path(user) %>
          </p>
        </td>
        <td>
          <%= user.score %>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>

